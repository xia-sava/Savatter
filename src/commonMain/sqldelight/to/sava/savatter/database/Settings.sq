CREATE TABLE settings (
  key TEXT NOT NULL PRIMARY KEY,
  value TEXT NOT NULL,
  comment TEXT NOT NULL DEFAULT ''
);

selectValue:
SELECT value FROM settings WHERE key = :key;

deleteAll:
DELETE FROM settings;

insert:
INSERT INTO settings (key, value, comment) VALUES (:key, :value, :comment)
 ON CONFLICT (key) DO UPDATE SET value = :value, comment = :comment WHERE key = :key;

delete:
DELETE FROM settings WHERE key = :key;

count:
SELECT COUNT(key) FROM settings;
